<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="recicla_belem_app.Page.TiposLixoPage"
             Title="Tipos de Lixo">

    <VerticalStackLayout Padding="30" Spacing="15" VerticalOptions="Center">

        <VerticalStackLayout Spacing="2">
            <Label Text="Cor da Lixeira"/>
            <Entry x:Name="CorEntry"
                   Placeholder="Cor da Lixeira"
                   Text="Azul" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="2">
            <Label Text="Tipo de Material"/>
            <Entry x:Name="MaterialEntry"
                   Placeholder="Tipo de Material"
                   Text="Papel e papelão" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="2">
            <Label Text="Classificação por Origem"/>
            <Entry x:Name="OrigemEntry"
                   Placeholder="Classificação por Origem"
                   Text="Lixo doméstico" />
        </VerticalStackLayout>

        <VerticalStackLayout Spacing="2">
            <Label Text="Descrição da Origem"/>
            <Entry x:Name="OrigemDescrEntry"
                   Placeholder="Classificação por Origem"
                   Text="Gerado em residências (restos de comida, embalagens, papel, vidro, plástico)" />
        </VerticalStackLayout>

        <Button Text="Registrar"
                Clicked="OnRegistrarClicked"
                HorizontalOptions="Fill" />

        <Button Text="Limpar"
                Clicked="OnLimparClicked"
                HorizontalOptions="Fill" />

        <Button Text="Voltar"
                Clicked="OnVoltarClicked"
                HorizontalOptions="Fill" />

    </VerticalStackLayout>
</ContentPage>
